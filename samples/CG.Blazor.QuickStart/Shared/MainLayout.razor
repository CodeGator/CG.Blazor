@inherits LayoutComponentBase

<MudThemeProvider Theme="@DefaultTheme.Instance()" />
<MudDialogProvider />
<MudSnackbarProvider />
    
<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/CodeGator/CG.Blazor/" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader Dense>
            
        </MudDrawerHeader>
        <NavMenu />        
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-4">
            <CascadingValue Value="@DefaultTheme.Instance()">
                @Body
                <br />
                <br />
                <br />
            </CascadingValue>
        </MudContainer>
        <Footer />
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
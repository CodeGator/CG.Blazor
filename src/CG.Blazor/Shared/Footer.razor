<MudAppBar Bottom="true" Color="Color.Inherit" Dense Elevation="0">
    <MudGrid>
        <MudItem xs="12">@ChildContent</MudItem>
        <MudItem xs="12">
            <MudText Style="font-size: x-small" Align="Align.Center">@Assembly.GetEntryAssembly().ReadCopyright()</MudText>
        </MudItem>
    </MudGrid>
</MudAppBar>

@code {
    /// <summary>
    /// This property contains any child content.
    /// </summary>
    [Parameter]
    [Category(CategoryTypes.General.Behavior)]
    public RenderFragment ChildContent { get; set; } = null!;
}